{
  "#if": {
    "prefix": "ppif",
    "body": [
      "#if ${1:0}",
      "    ${TM_SELECTED_TEXT}${0}",
      "#endif"
    ],
    "description": "#if directive"
  },
  "#ifdef": {
    "prefix": "ppifd",
    "body": [
      "#ifdef ${1:DEBUG}",
      "    ${TM_SELECTED_TEXT}${0}",
      "#endif"
    ],
    "description": "#ifdef directive"
  },
  "#ifndef": {
    "prefix": "ppifnd",
    "body": [
      "#ifndef ${1:1}",
      "    ${TM_SELECTED_TEXT}${0}",
      "#endif"
    ],
    "description": "#ifndef directive"
  },
  "#pragma region": {
    "prefix": "ppr",
    "body": [
      "#pragma region ${1:RegionName}",
      "    ${TM_SELECTED_TEXT}${0}",
      "#pragma endregion"
    ],
    "description": "#pragma region directive"
  },
  "class": {
    "prefix": "c",
    "body": [
      "class ${1:ClassName}",
      "{",
      "public:",
      "    ${1}();",
      "    ~${1}();",
      "",
      "private:",
      "    ${TM_SELECTED_TEXT}${0}",
      "};",
      "",
      "${1}::${1}()",
      "{",
      "}",
      "",
      "${1}::~${1}()",
      "{",
      "}"
    ],
    "description": "class declaration"
  },
  "constructor": {
    "prefix": "cr",
    "body": [
      "${1:TypeName}()",
      "{",
      "    ${0}",
      "}"
    ],
    "description": "constructor declaration"
  },
  "destructor": {
    "prefix": "dr",
    "body": [
      "~${1:TypeName}()",
      "{",
      "    ${0}",
      "}"
    ],
    "description": "destructor declaration"
  },
  "do-while": {
    "prefix": "dw",
    "body": [
      "do",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "} while (${1:true});"
    ],
    "description": "do-while statement"
  },
  "else": {
    "prefix": "e",
    "body": [
      "else",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "else statement"
  },
  "enum": {
    "prefix": "em",
    "body": [
      "enum ${1:EnumName}",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "};"
    ],
    "description": "enum declaration"
  },
  "enum class": {
    "prefix": "emc",
    "body": [
      "enum class ${1:EnumClassName}",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "};"
    ],
    "description": "enum class declaration"
  },
  "for": {
    "prefix": "fr",
    "body": [
      "for (${1:size_t} ${2:i} = 0; ${2} < ${3:length}; ${2}++)",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "for statement"
  },
  "for (range-based)": {
    "prefix": "frrb",
    "body": [
      "for (auto& ${1:i} : ${2:x})",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "range-based for statement"
  },
  "for (reversed)": {
    "prefix": "frr",
    "body": [
      "for (int ${1:i} = ${2:length} - 1; ${1} >= 0; ${1}--)",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "for statement (reversed)"
  },
  "for each": {
    "prefix": "fe",
    "body": [
      "for each (${1:object} ${2:var} in ${3:items})",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "for each statement"
  },
  "if": {
    "prefix": "if",
    "body": [
      "if (${1:true})",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "if statement"
  },
  "interface": {
    "prefix": "ie",
    "body": [
      "__interface ${1:InterfaceName}",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "};"
    ],
    "description": "interface declaration"
  },
  "namespace": {
    "prefix": "ns",
    "body": [
      "namespace ${1:NamespaceName}",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "namespace declaration"
  },
  "struct": {
    "prefix": "st",
    "body": [
      "struct ${1:StructName}",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "};"
    ],
    "description": "struct declaration"
  },
  "switch": {
    "prefix": "sh",
    "body": [
      "switch (${1:SwitchOn})",
      "{",
      "    ${2:default:",
      "    break;}${0}",
      "}"
    ],
    "description": "switch statement"
  },
  "try-catch": {
    "prefix": "tc",
    "body": [
      "try",
      "{",
      "    ${0}",
      "}",
      "catch (const std::exception&)",
      "{",
      "}"
    ],
    "description": "try-catch statement"
  },
  "union": {
    "prefix": "un",
    "body": [
      "union ${1:UnionName}",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "};"
    ],
    "description": "union"
  },
  "while": {
    "prefix": "we",
    "body": [
      "while (${1:true})",
      "{",
      "    ${TM_SELECTED_TEXT}${0}",
      "}"
    ],
    "description": "while statement"
  }
}